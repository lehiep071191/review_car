<% provide(:title, @post.title) %>
<div class = "container"> 
	<span class="user"><%= link_to @post.user.name, @post.user %></span>
	<div class="row">
		<aside class="col-md-8">

			<section>
			
				<h1>
					<%= image_tag @post.display_image if @post.image.attached? %>
				</h1>
				<h4>
					<%= Time.now %>
					<%= @post.content.html_safe %>
				</h4>			
			</section>
		</aside>	
	</div>
	<span>
		<%= render 'follow_form' %>
		<span id = "post-count">
			<% if logged_in? %>
				<% if @follow.present? %>
					You and <%=  @post.follows.count %> orther people liked post
				<% else %>
					<%=  @post.follows.count %>  people liked post	
				<% end %> 
			<% end %>
		</span>
	</span>
	<h3>comment</h3>
	<section class="comment_form_form">
		<%= render 'shared/comment_form' %>
	</section>  
	<% if @post.comments.any? %>
		(<%= @post.comments.count %>)
		<ol id="comments_ajax">
			<%= render @comments %>
		</ol>
		<%= will_paginate @comments %>
	<% end %>			
</div>

	


