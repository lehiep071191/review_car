<div style  = "max-width: 800px;">
	<%= form_for (@post) do |f| %>
			<div >
				<p >
				<select class="js-example-basic-multiple"   name="state" multiple="multiple">
					<%= Post.all.each do |post| %>
   	  					<option value="<%= post.title %>" ></option>
   					<% end %>
				</select>	
				</p>
				<p>
					<%= f.cktext_area :content, placeholder: "Compose new micropost..." %>
				</p>	
				<p >
					<%= f.submit "Post", class: "btn btn-primary btn-lg btn-block" %>	
				</p>
			</div>
	<% end %>	
</div>
<script type="text/javascript">
	$(document).ready(function() {
    $('.js-example-basic-multiple').select2();
});
</script>



